@model Parcial1.ViewModels.EstudianteCreateViewModel;

@{
    ViewData["Title"] = "Create";
    SelectList cursoList = (SelectList)ViewData["Cursos"];
}

<h1>Crear</h1>

<h4>Estudiante</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreAlumno" class="control-label"></label>
                <input asp-for="NombreAlumno" class="form-control" />
                <span asp-validation-for="NombreAlumno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApellidoAlumno" class="control-label"></label>
                <input asp-for="ApellidoAlumno" class="form-control" />
                <span asp-validation-for="ApellidoAlumno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dni" class="control-label"></label>
                <input asp-for="Dni" class="form-control" />
                <span asp-validation-for="Dni" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CursoElegido" class="control-label"></label>
            </div>
            
            <select class="form-control w-50 dropdown" multiple asp-for="CursoIds" asp-items="cursoList" placeholder="Seleccione cursos">
            </select>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <button type="button" class="btn btn-dark"><a asp-action="Index">Volver a la lista</a></button>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
